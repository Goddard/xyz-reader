<resources>
    <style name="Theme.Test" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Title" parent="Text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Large_Title" parent="Title">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Detail" parent="Text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Paragraph" parent="Text">
        <item name="android:textSize">@dimen/text_paragraph_size</item>
        <item name="android:textColor">@color/theme_primary_dark</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>
